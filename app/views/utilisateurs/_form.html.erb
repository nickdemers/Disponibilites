<%= form_for @utilisateur, :html => { :class => "form-horizontal utilisateur" } do |f| %>

  <% if @utilisateur.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@utilisateur.errors.count, "error") %> prohibited this utilisateur from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @utilisateur.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nom, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nom, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nom) %>
  </div>
  <div class="form-group">
    <%= f.label :prenom, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :prenom, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prenom) %>
  </div>
  <div class="form-group">
    <%= f.label :courriel, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :courriel, :class => 'form-control' %>
    </div>
    <%=f.error_span(:courriel) %>
  </div>
  <div class="form-group">
    <%= f.label :titre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:titre,UtilisateursHelper::LISTE_POSTE,{include_blank: ''}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:titre) %>
  </div>
  <div class="form-group">
    <%= f.label :numero_telephone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :numero_telephone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:numero_telephone) %>
  </div>
  <div class="form-group">
    <%= f.label :numero_cellulaire, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :numero_cellulaire, :class => 'form-control' %>
    </div>
    <%=f.error_span(:numero_cellulaire) %>
  </div>
  <div class="form-group">
    <%= f.label :message_texte_permis, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :message_texte_permis %>
    </div>
    <%=f.error_span(:message_texte_permis) %>
  </div>
  <div class="form-group">
    <%= f.label :niveau, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:niveau,UtilisateursHelper::LISTE_NIVEAU,{include_blank: ''}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:niveau) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                utilisateurs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

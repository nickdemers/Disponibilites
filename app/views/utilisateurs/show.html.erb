<%- model_class = Utilisateur -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom) %> :</strong></dt>
  <dd><%= @utilisateur.nom %></dd>
  <dt><strong>Prénom :</strong></dt>
  <dd><%= @utilisateur.prenom %></dd>
  <dt><strong>Courriel :</strong></dt>
  <dd><%= @utilisateur.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titre) %> :</strong></dt>
  <dd><%= get_description_poste(@utilisateur.titre) %></dd>
  <dt><strong>Numéro téléphone :</strong></dt>
  <dd><%= @utilisateur.numero_telephone %></dd>
  <dt><strong>Numéro cellulaire :</strong></dt>
  <dd><%= @utilisateur.numero_cellulaire %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message_texte_permis) %> :</strong></dt>
  <dd><%= @utilisateur.message_texte_permis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:niveau) %> :</strong></dt>
  <dd><%= get_description_niveau(@utilisateur.niveau) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              utilisateurs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_utilisateur_path(@utilisateur), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              utilisateur_path(@utilisateur),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm"), :default => 'Êtes-vous certain ?') },
              :class => 'btn btn-danger' %>

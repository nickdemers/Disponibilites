<%- model_class = Utilisateur -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:prenom) %></th>
      <th><%= model_class.human_attribute_name(:courriel) %></th>
      <th><%= model_class.human_attribute_name(:titre) %></th>
      <th><%= model_class.human_attribute_name(:numero_telephone) %></th>
      <th><%= model_class.human_attribute_name(:numero_cellulaire) %></th>
      <th><%= model_class.human_attribute_name(:message_texte_permis) %></th>
      <th><%= model_class.human_attribute_name(:niveau) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @utilisateurs.each do |utilisateur| %>
      <tr>
        <td><%= link_to utilisateur.id, utilisateur_path(utilisateur) %></td>
        <td><%= utilisateur.nom %></td>
        <td><%= utilisateur.prenom %></td>
        <td><%= utilisateur.courriel %></td>
        <td><%= get_description_poste(utilisateur.titre) %></td>
        <td><%= utilisateur.numero_telephone %></td>
        <td><%= utilisateur.numero_cellulaire %></td>
        <td><%= utilisateur.message_texte_permis %></td>
        <td><%= get_description_niveau(utilisateur.niveau) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_utilisateur_path(utilisateur), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      utilisateur_path(utilisateur),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_utilisateur_path,
            :class => 'btn btn-primary' %>

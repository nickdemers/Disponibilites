<%- model_class = User -%>
<div class="page-header">
  <h1>Liste des utilisateurs</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th>Prénom</th>
      <th>Courriel</th>
      <th><%= model_class.human_attribute_name(:titre) %></th>
      <th>Numéro téléphone</th>
      <th>Numéro cellulaire</th>
      <th><%= model_class.human_attribute_name(:message_texte_permis) %></th>
      <th><%= model_class.human_attribute_name(:niveau) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.nom %></td>
        <td><%= user.prenom %></td>
        <td><%= user.email %></td>
        <td><%= get_description_poste(user.titre) %></td>
        <td><%= user.numero_telephone %></td>
        <td><%= user.numero_cellulaire %></td>
        <td><%= user.message_texte_permis %></td>
        <td><%= get_description_niveau(user.niveau) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes-vous certain ?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>

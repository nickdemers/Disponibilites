<body class='contrast-blue login contrast-background'>
  <div class='middle-container'>
    <div class='middle-row'>
      <div class='middle-wrapper'>
        <div class='login-container'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-4 col-sm-offset-4'>
                <h1 class='text-center title'>Modifier votre mot de passe</h1>

                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => "validate-form" }) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.hidden_field :reset_password_token %>

                  <div class="controls with-icon-over-input">
                    <%= f.label :password, "Mot de passe" %><br />
                    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
                  </div>

                  <div class="controls with-icon-over-input">
                    <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Changer mon mot de passe" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<% #render "devise/shared/links" %>

<%- model_class = Disponibilite -%>
<h1>Liste des disponibilités</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:utilisateur_absent_id) %></th>
      <th><%= model_class.human_attribute_name(:utilisateur_remplacant_id) %></th>
      <th>École</th>
      <th><%= model_class.human_attribute_name(:niveau_id) %></th>
      <th>Date heure début</th>
      <th><%= model_class.human_attribute_name(:date_heure_fin) %></th>
      <th><%= model_class.human_attribute_name(:surveillance) %></th>
      <th>Spécialité</th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:statut) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @disponibilites.each do |disponibilite| %>
      <tr>
        <td><%= link_to disponibilite.id, disponibilite_path(disponibilite) %></td>
        <td><%= disponibilite.utilisateur_absent.nom + ", " + disponibilite.utilisateur_absent.prenom %></td>
        <td><%= disponibilite.utilisateur_remplacant_id.nil? ? "" : disponibilite.utilisateur_remplacant.nom + ", " + disponibilite.utilisateur_remplacant.prenom  %></td>
        <td><%= disponibilite.ecole.nom %></td>
        <td><%= get_description_niveau(disponibilite.niveau_id) %></td>
        <td><%= disponibilite.date_heure_debut.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= disponibilite.date_heure_fin.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= disponibilite.surveillance %></td>
        <td><%= disponibilite.specialite %></td>
        <td><%= disponibilite.notes %></td>
        <td><%= get_description_statut(disponibilite.statut) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_disponibilite_path(disponibilite), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      disponibilite_path(disponibilite),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes-vous certain ?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_disponibilite_path,
            :class => 'btn btn-primary' %>


